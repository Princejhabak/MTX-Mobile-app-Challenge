<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/survey_symptoms_heading"
        android:gravity="center_horizontal"
        style="@style/SurveyHeading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey_sub_heading2"
        style="@style/SurveyBody"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/survey_symptoms_fever_btn"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:src="@drawable/ic_fever"
                style="@style/SurveyButtonLayout"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/survey_symptoms_fever_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_symptoms_fever"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/survey_symptoms_cough_btn"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:src="@drawable/ic_cough"
                style="@style/SurveyButtonLayout"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/survey_symptoms_cough_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_symptoms_cough"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/survey_symptoms_breadth_btn"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:src="@drawable/ic_bad_throat"
                style="@style/SurveyButtonLayout"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/survey_symptoms_breadth_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_symptoms_breadth"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_margin="32dp">

        <TextView
            android:id="@+id/survey_symptoms_previous_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/survey_previous_button"
            style="@style/SurveyPrevious"/>

        <TextView
            android:id="@+id/survey_symptoms_next_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/survey_next_button"
            style="@style/SurveyNext"/>


    </LinearLayout>

</LinearLayout>