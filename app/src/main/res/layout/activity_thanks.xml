<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="32dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_thank_you"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_thanks_heading"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@android:color/black"
        android:text="@string/survey_thanks_sub_heading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="32dp"
        android:gravity="center">

        <TextView
            android:id="@+id/survey_thanks_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_thanks_link1"
            style="@style/TextViewOptions"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/survey_thanks_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_thanks_lin2"
            style="@style/TextViewOptions" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_margin="32dp">

        <TextView
            android:id="@+id/survey_thanks_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_back_home_button"
            android:textSize="16sp"
            android:textColor="#376DC8"
            android:drawableStart="@drawable/ic_arrow_back"
            android:drawablePadding="8dp"/>


    </LinearLayout>

</LinearLayout>