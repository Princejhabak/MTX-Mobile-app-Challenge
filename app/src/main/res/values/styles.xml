<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionBarSize">112dp</item>-->
        <!--<item name="actionBarSize">112dp</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SurveyHeading">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SurveyBody">
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SurveyButtonActive">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">#37BC9B</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">32dp</item>
        <item name="android:background">@drawable/button_active</item>
    </style>

    <style name="SurveyButtonLayoutActive">
        <item name="android:textColor">#37BC9B</item>
        <item name="android:padding">32dp</item>
        <item name="android:background">@drawable/button_active</item>
    </style>

    <style name="SurveyButton">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">32dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@drawable/button_inactive</item>
    </style>

    <style name="SurveyButtonLayout">
        <item name="android:padding">32dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@drawable/button_inactive</item>
    </style>


    <style name="SurveyNext">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">#376DC8</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="SurveyPrevious">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableStart">@drawable/ic_previous</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="TextViewOptions">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewOptionsActive">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableEnd">@drawable/ic_selected</item>
    </style>

    <style name="CardViewHeading">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="CardViewText">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
